<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.movietime.ui.MovieDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ratingV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rating"
            android:layout_below="@+id/descV"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/descV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_below="@+id/titleV"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/posterV"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/yearV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="release date"
            android:layout_toRightOf="@+id/titleV"
            android:layout_alignBaseline="@+id/titleV"
            android:paddingBottom="2sp"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/titleV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingBottom="-2sp"
            android:layout_centerInParent="true"
            android:text="title"
            android:layout_below="@+id/posterV"
            android:textAlignment="center"
            />
    </RelativeLayout>
</FrameLayout>
