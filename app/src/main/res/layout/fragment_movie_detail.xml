<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.movietime.ui.MovieDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ratingV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rating"
            android:layout_below="@+id/posterV"
            android:layout_toRightOf="@+id/posterV"
            android:layout_toEndOf="@+id/posterV"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="201dp" />
        <TextView
            android:id="@+id/descV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_below="@+id/ratingV"
            android:layout_toRightOf="@+id/ratingV"
            android:layout_toEndOf="@+id/ratingV"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="58dp" />
        <ImageView
            android:id="@+id/posterV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yearV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="release date"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_below="@+id/posterV"
            android:layout_alignLeft="@+id/descV"
            android:layout_alignStart="@+id/descV"
            android:layout_marginTop="55dp" />
        <TextView
            android:id="@+id/titleV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_below="@+id/descV"
            android:layout_toRightOf="@+id/yearV"
            android:layout_toEndOf="@+id/yearV"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="74dp" />
    </RelativeLayout>
</FrameLayout>
